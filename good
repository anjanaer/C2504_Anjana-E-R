<Window x:Class="BugTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bug Tracker" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Column List -->
        <ListBox ItemsSource="{Binding Columns}" 
                 SelectedItem="{Binding SelectedColumn}"
                 DisplayMemberPath="ColumnName"
                 Grid.Column="0" 
                 Margin="10" />

        <!-- Filter Options with CheckBoxes -->
        <ListBox Grid.Column="1" Margin="10" ItemsSource="{Binding FilterOptions}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="{Binding}" 
                                  IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" 
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Margin="10">
            <Button Content="Apply Filter" 
                    Command="{Binding ApplyFilterCommand}" 
                    Margin="5" />
            <Button Content="Reset Filter" 
                    Command="{Binding ResetFilterCommand}" 
                    Margin="5" />
        </StackPanel>
    </Grid>
</Window>
