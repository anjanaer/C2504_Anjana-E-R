                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Filter Options List -->
                <ListBox ItemsSource="{Binding FilterValues}" 
                 Grid.Column="1" Margin="10,0,0,0">
